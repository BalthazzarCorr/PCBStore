@model ComponentAddViewModel
@{
    ViewData["Title"] = "Add Component";
    Layout = "_AdminLayout_Two";
}

<h2>@ViewData["Title"]</h2>

<div class="content-wrapper">
    <div class="container-fluid">
        @if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
        {
            <div class="alert alert-success">
                @TempData[WebConstants.TempDataSuccessMessageKey]
            </div>
        }
        <div class="card mb-1">
            <div class="card-header col-md-4">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type"></label>
                        <select class="form-control" asp-for="Type" asp-items="Html.GetEnumSelectList<ComponentType>()"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Manufacturer"></label>
                        <select class="form-control" asp-for="Manufacturer" asp-items="Html.GetEnumSelectList<ManufacturersEnum>()"></select>
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImgAddress"></label>
                        <input asp-for="ImgAddress" class="form-control"/>
                        <span asp-validation-for="ImgAddress" class="text-danger"></span>
                    </div>


                    <input type="submit" class="btn btn-success" value="Add" />
                    <br />
                    <br />
                    <a asp-action="Index"><i class="fa fa-1 fa-chevron-left  " aria-hidden="true"></i><i class="fa fa-1 fa-chevron-left " aria-hidden="true"></i>Back</a>

                </form>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                </div>
            </div>
        </div>

    </div>
</div>
