@model ArticleDetailsModel
@{
    ViewData["Title"] = "Update/Deleting Article";
    Layout = "_AdminLayout_Two";
}


<script src="~/js/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#Content'
    });
</script>

<div class="content-wrapper">
    <div class="container-fluid">
        @if (TempData.ContainsKey(WebConstants.TempDataSuccessMessageKey))
        {
            <div class="alert alert-success">
                @TempData[WebConstants.TempDataSuccessMessageKey]
            </div>
        }
        <div class="card mb-1">
            <div class="card-header col-md-4">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <h4>Delete Article</h4>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Author"></label>
                        <input asp-for="Author" class="form-control"/>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea data-editable data-name="main-content" asp-for="Content" rows="30" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <input type="hidden" value="@Model.AuthorId" name="AuthorId" />
                    <input asp-controller="News" asp-action="UpdateArticle" asp-route-id="@Model.Id"  type="submit" class="btn btn-primary" value="Update"/>
                    <input asp-controller="News" asp-action="DeletePermanitly" asp-route-id="@Model.Id" type="submit" class="btn btn-danger" value="Delete"/>
                    </form>
                    <br />
                    <br />
                    <a asp-action="AdminListing"><i class="fa fa-1 fa-chevron-left  " aria-hidden="true"></i><i class="fa fa-1 fa-chevron-left " aria-hidden="true"></i>Back</a>

                @*</form>*@
            </div>
            <div class="card-body">
                <div class="table-responsive">

                </div>
            </div>
        </div>

    </div>
</div>





@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}